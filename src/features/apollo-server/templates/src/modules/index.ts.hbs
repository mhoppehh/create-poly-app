import { print } from 'graphql'
import { DateTimeResolver, JSONResolver } from 'graphql-scalars'
import path from 'path'
import { fileURLToPath } from 'url'
import { loadFilesSync } from '@graphql-tools/load-files'
import { mergeTypeDefs } from '@graphql-tools/merge'

import { resolversBooks } from './books/books'

const __filename = fileURLToPath(import.meta.url)
const __dirname = path.dirname(__filename)

const resolversBase = {
  DateTime: DateTimeResolver,
  JSON: JSONResolver,
}

const resolvers = [resolversBase, resolversBooks]

const loadedFiles = loadFilesSync([`${__dirname}/**/*.graphql`])

const mergedTypeDefs = mergeTypeDefs([loadedFiles])
const typeDefs = print(mergedTypeDefs)

export { resolvers, typeDefs }