{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "lib": ["ESNext", "DOM"],
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}