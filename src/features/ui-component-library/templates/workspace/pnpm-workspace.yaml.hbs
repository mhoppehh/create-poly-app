# UI Component Library Workspace Configuration
# This file extends the main pnpm workspace to include UI component packages

packages:
  # Include existing workspace packages
  - 'packages/*'
  {{#if platforms}}
  # UI Component Library packages
  {{#each platforms}}
  {{#if_eq this "web"}}
  - 'packages/ui-web'
  {{/if_eq}}
  {{/each}}
  {{#if (gt platforms.length 1)}}
  - 'packages/ui-shared'  # Cross-platform shared components
  {{/if}}
  {{/if}}

