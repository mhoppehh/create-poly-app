{
  "name": "create-poly-app",
  "version": "0.1.0",
  "description": "A powerful CLI tool for scaffolding modern polyglot applications with React, GraphQL, Prisma, and more",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-poly-app": "./dist/main.cjs"
  },
  "exports": {
    ".": {
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:clean": "rm -rf dist && pnpm build",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:snapshots": "vitest run tests/snapshots",
    "prepare": "husky",
    "prepublishOnly": "pnpm build:clean && pnpm type-check && pnpm lint && pnpm format",
    "publish:check": "./scripts/publish-check.sh",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "demo:forms": "tsx src/scripts/demo-forms.ts",
    "demo:forms:meta": "tsx src/scripts/form-builder-demo.ts",
    "scaffold:feature": "tsx src/scripts/scaffold-feature.ts"
  },
  "keywords": [
    "cli",
    "scaffold",
    "scaffolding",
    "generator",
    "boilerplate",
    "typescript",
    "react",
    "vite",
    "graphql",
    "apollo-server",
    "prisma",
    "tailwindcss",
    "monorepo",
    "fullstack",
    "polyglot",
    "create-app",
    "project-template"
  ],
  "author": {
    "name": "mhoppehh",
    "url": "https://github.com/mhoppehh"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/mhoppehh/create-poly-app.git"
  },
  "bugs": {
    "url": "https://github.com/mhoppehh/create-poly-app/issues"
  },
  "homepage": "https://github.com/mhoppehh/create-poly-app#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/glob": "^9.0.0",
    "css-tree": "^3.1.0",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "lodash.merge": "^4.6.2",
    "prompts": "^2.4.2",
    "tailwindcss": "^4.1.12",
    "ts-morph": "^26.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/css-tree": "^2.3.10",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^2.1.0",
    "docker": "^1.0.0",
    "eslint": "^9.34.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "memfs": "^4.14.0",
    "prettier": "^3.6.2",
    "rollup": "^4.50.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.2.3",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.44.1",
    "vitest": "^2.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
